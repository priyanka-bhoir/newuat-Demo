<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Account_Detail">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/accountdeatil_card_liner"
        android:outlineAmbientShadowColor="@android:color/holo_orange_light">
<!--        <FrameLayout-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_gravity="center"-->
<!--            android:layout_marginBottom="100dp"-->
<!--            >-->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:foregroundGravity="center"
                android:layout_gravity="center"
                android:src="@drawable/img"/>
<!--        </FrameLayout>-->
        <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_gravity="center"
        app:cardElevation="0dp"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="20dp"
            android:paddingTop="20dp"
            android:background="@drawable/cardbackgrownd"
            >
            <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/linerincard1"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_gravity="center"
            >
            <ImageView
                android:id="@+id/card_fav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@drawable/ic_baseline_star_border_24"/>

            <ImageView
                android:id="@+id/checkin_checkout"
                android:layout_marginLeft="@dimen/nav_header_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@drawable/ic_baseline_location_on_24"
                />

        </LinearLayout>
            <TextView
                android:id="@+id/card_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                />
            <TextView
                android:id="@+id/card_compay_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="company"/>
            <TextView
                android:id="@+id/card_address_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="address"/>
<!--            <LinearLayout-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:orientation="vertical">-->
<!--                <TextView-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"/>-->
<!--                -->
<!--            </LinearLayout>-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/card_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_call_24"
                android:padding="15dp"/>
            <ImageView
                android:id="@+id/card_sms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_sms_24"
                android:padding="15dp"/>

            <ImageView
                android:id="@+id/card_wp"
                android:layout_width="50dp"
                android:layout_height="38dp"
                android:padding="10dp"
                android:src="@drawable/whatsapp"

                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/card_email"
                android:padding="10dp"
                android:src="@drawable/ic_baseline_email_24"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/card_map"
                android:padding="10dp"
                android:src="@drawable/ic_baseline_map_24"/>

            <ImageView
                android:id="@+id/card_export"
                android:padding="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/export"/>
        </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView></LinearLayout>
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/accountdeatil_card_liner">
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DETAILS"/>

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RELATED" />

    </com.google.android.material.tabs.TabLayout>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager"
        android:layout_below="@id/tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>